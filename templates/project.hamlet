<div .row>
    <div .span4>
        <h2>
            #{projectName project}

        #{description}
    <div .span4>
        <table>
            <tr>
                <td>
                    Total&nbsp;of&nbsp;current&nbsp;pledges: #{show project_value}&nbsp;per&nbsp;month
            <tr>
                <td>
                    <hr>
            <tr>
                <td>
                    $maybe project_id <- maybe_project_id
                        <a href="@{ProjectPatronsR project_id}">
                            _{MsgPatrons users}
                    $nothing
                        _{MsgPatrons users}
            <tr>
                <td>
                    _{MsgShares shares}
            <tr>
                <td>
                    #{show share_value}&nbsp;per&nbsp;share
        <hr>

        $maybe project_id <- maybe_project_id
            <form method=GET action=@{UpdateSharesR project_id}>
                ^{update_shares}
                $if isJust maybe_shares
                    <input type=submit value="update pledge">
                $else
                    <input type=submit value="enter pledge">
        $nothing
            <form>
                ^{update_shares}
                <button value="enter pledge">

    <div .span3 .offset1>
        ^{sidebar}
