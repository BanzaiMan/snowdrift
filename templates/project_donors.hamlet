<div .row>
    <div .col-md-8>
        <div .row>
            <div .col-md-4>
                <h2>
                    #{projectName project}

        <div .row>
            <div .col-md-8>
                $if null pledges
                    no patrons yet
                $else
                    <table>
                        $forall (pledge, user) <- pledges
                            <tr>
                                <td>
                                    <a href="@{UserR (entityKey user)}">
                                        #{userPrintName user}
                                <td>
                                    #{show (pledgeShares (entityVal pledge))}&nbsp;shares
                                <td>
                                    $maybe count <- M.lookup (entityKey user) user_payouts_map
                                        $if count < 2
                                            (pending)
                                    $nothing
                                        (pending)

    <div .col-md-3 .col-md-offset-1>
        ^{sidebar}
